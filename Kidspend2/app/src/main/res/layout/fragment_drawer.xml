<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/colorAccent"
    >
    <TextView
        android:id="@+id/menu_item_settings"
        style="@style/MenuItem"
        android:text="@string/menu_item_settings"
        />
    <TextView
        android:id="@+id/menu_item_export"
        style="@style/MenuItem"
        android:text="@string/menu_item_export"
        />
    <TextView
        android:id="@+id/menu_item_import"
        style="@style/MenuItem"
        android:text="@string/menu_item_import"
        />
    <TextView
        android:id="@+id/menu_toggle_summary_all"
        style="@style/MenuItem"
        android:text="@string/menu_item_toggle_summary_all"
        />
    <android.support.v7.widget.RecyclerView
        android:id="@+id/navigation_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
    </android.support.v7.widget.RecyclerView>

</LinearLayout>
