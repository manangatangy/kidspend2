<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="BaseAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- colorPrimary sets the toolbar/actionbar -->
        <!-- colorPrimaryDark sets the statusbar -->
        <item name="colorPrimaryDark">@android:color/black</item>
        <item name="colorAccent">#666</item>

        <item name="android:textColorPrimary">@android:color/white</item>
        <!--<item name="android:textColorSecondary">@color/red</item>-->
        <!--<item name="android:buttonStyle">@style/AppTheme.Text.Button</item>-->
        <item name="android:alertDialogTheme">@style/Theme.AppCompat.Light.Dialog.Alert</item>
        <item name="alertDialogTheme">@style/Theme.AppCompat.Light.Dialog.Alert</item>

        <item name="actionBarStyle">@style/ToolBarStyle</item>
        <item name="toolbarStyle">@style/ToolBarStyle</item>
        <item name="toolbarNavigationButtonStyle">@style/AppTheme.Toolbar.Button.Navigation</item>

    </style>

    <style name="AppThemeX" parent="BaseAppTheme"/>

    <style name="BaseAppTheme.ToolbarDark">
        <item name="android:textColorSecondary">@android:color/white</item>
    </style>

    <style name="BaseAppTheme.ToolbarLight">
        <item name="android:textColorSecondary">@color/white</item>
    </style>
</resources>